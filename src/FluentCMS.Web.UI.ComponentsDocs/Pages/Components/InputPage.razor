@page "/components/input"
@layout ComponentsLayout;

<Page>
    <PageHeader Title="Inputs" />
    <PageBody>
        <ComponentPreview Title="Default">
            <Input Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Label">
            <Input Label="This is a label"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Disabled">
            <Input Disabled="true"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Required">
            <Input Required="true"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Readonly">
            <Input readonly="@true"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Placeholder">
            <Input Placeholder="Type something..."
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Icon">
            <Input IconStart="IconName.InformationFilled"
                   Value="@("")" />
            <Input IconEnd="IconName.Search"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Hint">
            <Input Hint="This is a hint"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Dense">
            <Input Dense="true"
                   Value="@("")" />
            <Input Dense="true"
                   Value="@("")" />
            <Input Dense="true"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Initial Value">
            <Input @bind-Value="Value1" />
            <Badge Color="Color.Primary">
                @Value1
            </Badge>
        </ComponentPreview>

        <ComponentPreview Title="Bind Value">
            <Input @bind-Value="Value2" />
            <Input @bind-Value="Value2" />
        </ComponentPreview>

        <ComponentPreview Title="Validation">
            <Input Hint="This is a hint"
                   Label="Input"
                   Placeholder="Type something..."
                   State="FormFieldState.Default"
                   Value="@("")" />
            <Input Hint="This is a hint"
                   Label="Input"
                   Placeholder="Type something..."
                   State="FormFieldState.Invalid"
                   Value="@("")" />
            <Input Hint="This is a hint"
                   Label="Input"
                   Placeholder="Type something..."
                   State="FormFieldState.Valid"
                   Value="@("")" />
        </ComponentPreview>

        <ComponentPreview Title="Types">
            <Input Label="Text"
                   Value="@("")" />
            <Input Label="Password"
                   Type="InputType.Password"
                   Value="@("")" />
            <Input Label="Number"
                   Type="InputType.Number"
                   Value="0" />
            <Input Label="Date"
                   Type="InputType.DatetimeLocal"
                   Value="DateTime.Now" />
        </ComponentPreview>
    </PageBody>
</Page>

@code {
    private string Value1 = "Initial";
    private string Value2;
}
