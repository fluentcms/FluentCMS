@page "/components/dropdown"
@layout ComponentsLayout

<Page>
    <PageHeader Title="Dropdowns" />
    <PageBody>
        <ComponentPreview Title="Default">
            <Dropdown>
                <DropdownButton Color="Color.Primary">
                    Dropdown Button
                </DropdownButton>
                <DropdownMenu>
                    <DropdownItem>Item 1</DropdownItem>
                    <DropdownItem>Item 2</DropdownItem>
                    <DropdownItem>Item 3</DropdownItem>
                    <DropdownItem>Item 4</DropdownItem>
                    <DropdownItem>Item 5</DropdownItem>
                </DropdownMenu>
            </Dropdown>
        </ComponentPreview>

        <ComponentPreview Title="Href">
            <Dropdown>
                <DropdownButton Color="Color.Primary">
                    Dropdown Button
                </DropdownButton>
                <DropdownMenu>
                    <DropdownItem Href="/">Item 1</DropdownItem>
                    <DropdownItem Href="/">Item 2</DropdownItem>
                    <DropdownItem Href="/">Item 3</DropdownItem>
                    <DropdownItem Href="/">Item 4</DropdownItem>
                    <DropdownItem Href="/">Item 5</DropdownItem>
                </DropdownMenu>
            </Dropdown>
        </ComponentPreview>

        <ComponentPreview Title="Manual Close">
            <Dropdown @bind-Open="Open"
                      AutoClose="false">
                <DropdownButton Color="Color.Primary">
                    Dropdown Button
                </DropdownButton>
                <DropdownMenu>
                    <DropdownItem>Item 1</DropdownItem>
                    <DropdownItem>Item 2</DropdownItem>
                    <DropdownItem>Item 3</DropdownItem>
                    <DropdownItem>Item 4</DropdownItem>
                    <DropdownItem OnClick="() => Open = false">Close</DropdownItem>
                </DropdownMenu>
            </Dropdown>
        </ComponentPreview>
    </PageBody>
</Page>

@code {
    public bool Open { get; set; }
}
