@page "/examples/login"
@layout ExamplesLayout

<Page>
    <PageBody>
        <Grid class="h-screen" 
              ItemsSmall="GridItems.Center" 
              JustifySmall="GridJustify.Center">
            <GridItem Small="GridItemColumn.Twelve" 
                      Medium="GridItemColumn.Six"
                      Large="GridItemColumn.Four">
                <h1 class="text-3xl text-center">Fluent CMS</h1>
                <Spacer/>
                <Card>
                    <CardBody>
                        <CardTitle>Sign in to Platform</CardTitle>
                        <Spacer/>
                        <Grid>
                            <GridItem Small="GridItemColumn.Twelve">
                                <Input Label="Your Email" 
                                       Placeholder="name@company.com"/>
                            </GridItem>
                            <GridItem Small="GridItemColumn.Twelve">
                                <Input Label="Your Password" 
                                       Placeholder="12345678"
                                       Type="InputType.Password" />
                            </GridItem>
                            <GridItem Small="GridItemColumn.Grow">
                                <Checkbox Label="Remember Me" />
                            </GridItem>
                            <GridItem Small="GridItemColumn.Auto">
                                <Button Color="Color.Primary"
                                        Ghost>
                                    Lost Password?
                                </Button>
                            </GridItem>
                            <GridItem Small="GridItemColumn.Twelve">
                                <Button Color="Color.Primary">Login to your Account</Button>
                            </GridItem>
                            <Spacer/>
                            <GridItem>
                                Not Registered? 
                                <Button Ghost
                                        Color="Color.Primary">
                                    Create Account
                                </Button>
                            </GridItem>
                        </Grid>
                    </CardBody>
                </Card>
            </GridItem>
        </Grid>
    </PageBody>
</Page>

