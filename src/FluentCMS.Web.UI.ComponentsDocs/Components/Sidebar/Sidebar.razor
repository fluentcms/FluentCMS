@inherits BaseComponent

@namespace FluentCMS.Web.UI.ComponentsDocs.Components

@if(Visible)
{
    <aside @attributes="AdditionalAttributes"
           class="@Class" id="@Id">
        <div class="@MainClass">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h4 class="text-xl text-gray-900 dark:text-white py-5">
                    @Title
                </h4>
            }
            @Header
            <ul>
                <li>
                    <ul>
                        @ChildContent
                    </ul>
                </li>
            </ul>
        </div>
        @if (Footer != null)
        {
            <div class="justify-center w-full flex flex-col bg-white dark:bg-gray-800">
                @Footer
            </div>
        }
    </aside>

    @if(!Secondary)
    {
        <div class="fixed inset-0 z-10 bg-gray-900/50 dark:bg-gray-900/50 hidden" id="@(Id + "Backdrop")"></div>
    }
}
