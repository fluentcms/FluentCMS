@inherits BaseComponent

@namespace FluentCMS.Web.UI.Components

@if(Visible)
{
    <div @attributes="AdditionalAttributes"
         class="@this.GetClasses()">
        @if (ChildContent == null)
        {
            @if (!string.IsNullOrEmpty(Title))
            {
                <ModalTitle>
                    @Title
                </ModalTitle>
            }
        }
        else
        {
            @ChildContent
        }
        @if (Closable)
        {
            <CloseButton @onclick="Modal.Close" />
        }
    </div>
}
