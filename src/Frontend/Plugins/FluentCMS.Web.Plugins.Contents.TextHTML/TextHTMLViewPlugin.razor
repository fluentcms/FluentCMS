@inherits BasePlugin
@namespace FluentCMS.Web.Plugins.Contents.TextHTML

@if (Item != null)
{
    @if(ViewState.HasPageContributorAccess())
    {
        <InlineEditor Value="@Item.Content" OnCancel="OnCancel" OnSave="UpdateContent"/>
    }
    else
    {
        <div class="f-html-content">
            @((MarkupString)Item.Content)
        </div>
    }
}