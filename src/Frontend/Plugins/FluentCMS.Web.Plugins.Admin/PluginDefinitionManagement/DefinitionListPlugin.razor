@inherits BasePlugin

<PluginBody Title="Plugins">
    <ChildContent>
        <DataTable Items="PluginDefinitions">
            <DataTableItem Label="Title">@context.Name </DataTableItem>
            <DataTableItem Label="Description">@context.Description </DataTableItem>
            <DataTableItem Label="Assembly">@context.Assembly </DataTableItem>
            <DataTableItem Label="Category">@context.Category </DataTableItem>
        </DataTable>
    </ChildContent>
</PluginBody>
