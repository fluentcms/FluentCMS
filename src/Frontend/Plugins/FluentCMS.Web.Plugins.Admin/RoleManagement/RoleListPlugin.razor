@inherits BasePlugin
@rendermode InteractiveServer

<PluginBody Title="Roles">
    <ActionsFragment>
        <ActionButtonCreate Href="@GetUrl("Create Role")" Label="Add Role" />
    </ActionsFragment>
    <ChildContent>
        <DataTable Items="Roles">
            <DataTableItem Label="Name">@context.Name</DataTableItem>
            <DataTableItem Label="Description">@context.Description</DataTableItem>
            <DataTableItem Label="Create Date">@context.CreatedAt</DataTableItem>
            <DataTableItem Label="Create By">@context.CreatedBy</DataTableItem>
            <DataTableItem Label="Modified Date">@context.ModifiedAt</DataTableItem>
            <DataTableItem Label="Modified By">@context.ModifiedBy</DataTableItem>
            <ActionButtons>
                <ActionButtonEdit Visible="@(context.Type == RoleType.Default)" Href="@GetUrl("Update Role", new { id = @context.Id })" />
                <ActionButtonDelete Visible="@(context.Type == RoleType.Default)" @onclick="() => OnConfirm(context)" />
            </ActionButtons>
        </DataTable>
    </ChildContent>
</PluginBody>

<Confirm OnConfirm="OnDelete" OnCancel="OnConfirmClose" Visible="SelectedRole != null">
    Are you sure to delete role @SelectedRole!.Name?
</Confirm>
