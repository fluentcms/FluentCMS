@inherits BasePlugin

<PluginForm Model="@Model" Name="@FORM_NAME" Title="Update Content Type" OnSubmit="OnSubmit">
    <FormHiddenInput @bind-Value="Model!.Id" />
    <FormInput @bind-Value="Model!.Title" Label="Title" Placeholder="Enter Title" />
    <FormTextarea @bind-Value="Model!.Description" Label="Description" Placeholder="Enter Description" />
    <FormActions Cancel Submit />
</PluginForm>
