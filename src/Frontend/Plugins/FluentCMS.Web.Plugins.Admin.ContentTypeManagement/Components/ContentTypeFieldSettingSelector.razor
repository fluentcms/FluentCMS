@inherits BaseComponent

@namespace FluentCMS.Web.Plugins.Admin.ContentTypeManagement

@if (ContentTypeField != null)
{
    <CascadingValue Value="FieldType">
        @if (FieldType?.Key == FieldTypes.STRING)
        {
            <StringFieldSettings Model=@(ContentTypeField.ToFieldModel<StringFieldModel>()) OnCancel=OnCancel OnSubmit=OnSubmit />
        }
        @if (FieldType?.Key == FieldTypes.BOOLEAN)
        {
            <BooleanFieldSettings Model=@(ContentTypeField.ToFieldModel<BooleanFieldModel>()) OnCancel=OnCancel OnSubmit=OnSubmit />
        }
        @if (FieldType?.Key == FieldTypes.NUMBER)
        {
            <NumberFieldSettings Model=@(ContentTypeField.ToFieldModel<NumberFieldModel>()) OnCancel=OnCancel OnSubmit=OnSubmit />
        }
        @if (FieldType?.Key == FieldTypes.MULTI_SELECT)
        {
            <MultiSelectFieldSettings Model=@(ContentTypeField.ToFieldModel<MultiSelectFieldModel>()) OnCancel=OnCancel OnSubmit=OnSubmit />
        }
        @if (FieldType?.Key == FieldTypes.DATE)
        {
            <DateFieldSettings Model=@(ContentTypeField.ToFieldModel<DateFieldModel>()) OnCancel=OnCancel OnSubmit=OnSubmit />
        }
    </CascadingValue>
}
