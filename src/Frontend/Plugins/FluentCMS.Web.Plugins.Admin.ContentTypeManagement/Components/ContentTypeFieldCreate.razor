@inherits BaseContentTypeFieldComponent

@namespace FluentCMS.Web.Plugins.Admin.ContentTypeManagement

@if (Visible && ContentTypeField != null && ContentType != null)
{
    @if (SelectedFieldType == null)
    {
        <ContentTypeFieldSelector OnSelect=OnTypeSelect OnCancel=OnComplete />
    }
    else
    {
        <ContentTypeFieldSettingSelector ContentTypeField=ContentTypeField SelectedFieldType=SelectedFieldType OnCancel=OnBackToTypeSelector OnSubmit=OnFieldCreate />
    }
}
