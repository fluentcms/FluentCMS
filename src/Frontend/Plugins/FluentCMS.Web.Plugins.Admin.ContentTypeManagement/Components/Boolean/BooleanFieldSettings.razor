@inherits BaseFieldSettingViewComponent<BooleanFieldModel>

@namespace FluentCMS.Web.Plugins.Admin.ContentTypeManagement

<FieldSettingForm Model="Model" OnCancel="OnCancel" OnSubmit="OnSubmit">
    <Tabs Active="Basic">
        <TabList>
            <TabItem Name="Basic">
                Basic
            </TabItem>
            <TabItem Name="Advanced">
                Advanced
            </TabItem>
        </TabList>
        <TabContent>
            <TabPanel Name="Basic">
                <Grid GutterX="GridGutter.Large">
                    <FormHiddenInput @bind-Value="Model.Type" />
                    <FormInput @bind-Value="Model.Name" Cols="6" Label="Name" Placeholder="Enter Field Name" Required Disabled="@(CurrentState != FieldManagementState.Create)" />
                    <FormInput @bind-Value="Model.Label" Cols="6" Label="Label" Placeholder="Enter Field Label" Required />
                    <FormSwitch @bind-Value="Model.DataTableVisible" Cols="6" Label="Show in content list" Required />
                    <FormNumberInput @bind-Value="Model.DataTableColumnOrder" Cols="6" Label="Column order in content list" Placeholder="Enter Field Label" Required Disabled="@(!Model.DataTableVisible)" />
                    <FormTextarea @bind-Value="Model.Description" Label="Description" Placeholder="Enter Field Description" Required />
                </Grid>
            </TabPanel>
            <TabPanel Name="Advanced">
                <Grid GutterX="GridGutter.Large">
                    test
                </Grid>
            </TabPanel>
        </TabContent>
    </Tabs>
</FieldSettingForm>
