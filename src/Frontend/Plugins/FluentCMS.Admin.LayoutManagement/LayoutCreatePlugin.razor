@inherits BasePlugin

<PluginForm Model="@Model" Name="@FORM_NAME" Title="Create New Layout" OnSubmit="@OnSubmit">
    <FormInput @bind-Value="Model!.Name" Label="Name" Placeholder="Enter layout name" Required />
    <FormTextarea @bind-Value="Model!.Head" Label="Layout Head" Placeholder="Enter layout head section" Required />
    <FormTextarea @bind-Value="Model!.Body" Label="Layout Body" Placeholder="Enter layout body section" Required />
    <FormActions Cancel Submit />
</PluginForm>
