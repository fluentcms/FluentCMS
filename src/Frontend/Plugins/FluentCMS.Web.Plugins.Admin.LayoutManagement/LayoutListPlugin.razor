@inherits BasePlugin
@rendermode InteractiveServer

<PluginBody Title="Layouts List">
    <ActionsFragment>
        <Button Href="@GetUrl("Create Layout")" Color="Color.Primary">
            <Icon Name="IconName.Plus" />Add Layout
        </Button>
    </ActionsFragment>
    <ChildContent>
        <DataTable Items="Layouts">
            <DataTableItem Label="Name">@context.Name</DataTableItem>
            <DataTableItem Label="Created By">@(context.CreatedBy ?? string.Empty)</DataTableItem>
            <DataTableItem Label="Created At">@context.CreatedAt</DataTableItem>
            <DataTableItem Label="Modified By">@(context.ModifiedBy ?? string.Empty)</DataTableItem>
            <DataTableItem Label="Modified At">@context.ModifiedAt</DataTableItem>
            <DataTableItem>
                <Stack>
                    <Button Color="Color.Primary" Href="@GetUrl("Update Layout", new { id = @context.Id })"  Size="ButtonSize.Small">
                        <Icon Name="IconName.Edit" />Edit
                    </Button>
                    <Button Color="Color.Danger" Outline @onclick="() => OnConfirm(context)" Size="ButtonSize.Small">
                        <Icon Name="IconName.Delete" />Delete
                    </Button>
                </Stack>
            </DataTableItem>
        </DataTable>
    </ChildContent>
</PluginBody>

<Confirm OnConfirm="OnDelete" OnCancel="OnConfirmClose" Visible="SelectedLayout != null">
    Are you sure to delete layout @SelectedLayout!.Name?
</Confirm>
