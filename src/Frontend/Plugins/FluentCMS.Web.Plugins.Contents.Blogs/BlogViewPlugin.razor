@if (Items != null)
{
    <div class="f-blogs">
        @foreach (var item in Items)
        {
            <article class="f-blog">
                <div class="f-blog-header">
                    @if (!string.IsNullOrEmpty(item.Category))
                    {
                        <span class="f-blog-category">
                            @item.Category
                        </span>
                    }
                    @if (item.CreatedAt != null)
                    {
                        <span class="f-blog-date">@item.CreatedAt.Value</span>
                    }
                </div>
                <h2 class="f-blog-title">
                    <a href="@GetDetailUrl("Detail", new { Id = item.Id })">@item.Title</a>
                </h2>
                <p class="f-blog-description">
                    @item.Description
                </p>
                <div class="f-stack f-stack-justify-between f-stack-items-center">
                    <div class="f-blog-author-wrapper">
                        <img class="f-blog-author-profile" src="@item.AuthorProfile" alt="@item.AuthorName avatar" />
                        <span class="f-blog-author-name">
                            @item.AuthorName
                        </span>
                    </div>
                    <a href="@GetDetailUrl("Detail", new { Id = item.Id })" class="f-blog-detail-link">
                        Read more
                        <svg class="f-blog-detail-icon" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </a>
                </div>
            </article> 
        }
    </div>
}