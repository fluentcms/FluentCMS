@namespace FluentCMS.Web.Plugins

@inherits BaseComponent

@if (Visible)
{
    @if (TableAction)
    {
        <Button @attributes="AdditionalAttributes" @onclick:stopPropagation="true" Ghost Color="@Color" Href="@Href" Size="ButtonSize.Small">
            @if (IconName != IconName.Default)
            {
                <Icon Name="@IconName"/>
            }
            @if (!string.IsNullOrEmpty(Label))
            {
                <Tooltip Placement="TooltipPlacement.Top">
                    @Label
                </Tooltip>
            }
        </Button>
    }
    else 
    {
        <Button @attributes="AdditionalAttributes" @onclick:stopPropagation="true" Color="@Color" Href="@Href">
            @if (IconName != IconName.Default)
            {
                <Icon Name="@IconName"/>
            }
            @if (!string.IsNullOrEmpty(Label))
            {
                @Label
            }
        </Button>
    }
}
