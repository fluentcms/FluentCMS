@namespace FluentCMS.Web.Plugins

<Modal Placement="ModalPlacement.Top" Visible Size="ModalSize.Large" OnClose="HandleCancel">
    <ModalHeader>
        <ModalTitle>
            Choose File
        </ModalTitle>
    </ModalHeader>
    <div style="max-height: 60vh; overflow: auto;">
        <FilesTable @bind-FolderId="@FolderId" OnRowClick="(AssetDetail item) => OnSelectFile(item)">
            <ActionsFragment>
                <ActionButton Visible="!context.IsFolder" IconName="IconName.Check" Label="Select" @onclick="() => OnSelectFile(context)" />
                <ActionButton Visible="!context.IsFolder" IconName="IconName.Download" Label="Download" @onclick="() => DownloadFile(context.Id)" Color="Color.Primary" />
                <ActionButtonOpen Visible="context.IsFolder" @onclick="() => NavigateFolder(context.Id)" />
            </ActionsFragment>
        </FilesTable>
    </div>
    <ModalBody>
        <Grid>
            <GridItem Small="GridItemColumn.Twelve">
                <Stack>
                    <Button @onclick="HandleCancel">Cancel</Button>
                </Stack>
            </GridItem>
        </Grid>
    </ModalBody>
</Modal>