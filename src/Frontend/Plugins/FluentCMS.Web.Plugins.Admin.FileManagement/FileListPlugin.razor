@inherits BasePlugin
@rendermode InteractiveServer

<PluginBody Title="Assets List">
    <ActionsFragment>
        @if (FolderId != null)
        {
            <Button Href="/admin/assets" Outline>
                Back
            </Button>
        }
        <Button Href="@GetUrl("Create Folder")" Color="Color.Secondary">
            <Icon Name="IconName.Plus" />Add Folder
        </Button>
        <Button Href="@GetUrl("Upload File", new { folderId = FolderId })" Color="Color.Primary">
            <Icon Name="IconName.Plus" />Upload File
        </Button>
    </ActionsFragment>
    <ChildContent>
        <DataTable Items="Assets">
            <DataTableItem Label="Name">@context.Name</DataTableItem>
            <!-- <DataTableItem Label="Created By">@(context.CreatedBy ?? string.Empty)</DataTableItem>
            <DataTableItem Label="Created At">@context.CreatedAt</DataTableItem>
            <DataTableItem Label="Modified By">@(context.ModifiedBy ?? string.Empty)</DataTableItem>
            <DataTableItem Label="Modified At">@context.ModifiedAt</DataTableItem> -->
            <DataTableItem>
                <Stack>
                    @if (context.Type == AssetType._0)
                    {
                        <Button Color="Color.Primary" Href="@GetUrl("Files List", new { folderId = @context.Id })"  Size="ButtonSize.Small">
                            <Icon Name="IconName.Eye" />Open
                        </Button>
                        <Button Color="Color.Secondary" Outline Href="@GetUrl("Update Folder", new { id = @context.Id })"  Size="ButtonSize.Small">
                            <Icon Name="IconName.Edit" />Edit
                        </Button>
                        <Button Color="Color.Danger" Outline @onclick="() => OnConfirm(context)" Size="ButtonSize.Small">
                            <Icon Name="IconName.Delete" />Delete
                        </Button>
                    }
                </Stack>
            </DataTableItem>
        </DataTable>
    </ChildContent>
</PluginBody>

<Confirm OnConfirm="OnDelete" OnCancel="OnConfirmClose" Visible="SelectedAsset != null">
    Are you sure to delete file/folder @SelectedAsset!.Name?
</Confirm>
