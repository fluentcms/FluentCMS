@inherits BasePlugin
@rendermode InteractiveServer

<PluginForm Model="@Model" Name="@FORM_NAME" Title="Update File" OnSubmit="OnSubmit">
    <FormInput @bind-Value="Model.Name" Label="Name (without extension)" Placeholder="Enter File Name" Required />
    <FormSelect @bind-Value="Model.FolderId" Data="Folders" ValueField="Id" TextField="Name" Label="Parent Folder" Placeholder="Choose Parent Folder" Required />
    <FormActions Cancel Submit />
</PluginForm>
