{
    "name": "fluentcms.web.ui.components",
    "scripts": {
        "tailwind:sitebuilder": "tailwindcss -i ./dist/sitebuilder.css -o ../wwwroot/css/sitebuilder.min.css --minify",
        "sass:sitebuilder": "sass ./Scss/SiteBuilder.scss:./dist/sitebuilder.css",
        "build:sitebuilder": "npm run sass:sitebuilder && npm run tailwind:sitebuilder",
        "tailwind:sitebuilder-preview": "tailwindcss -i ./dist/sitebuilder-preview.css -o ../wwwroot/css/sitebuilder-preview.min.css --minify",
        "sass:sitebuilder-preview": "sass ./Scss/SiteBuilderPreview.scss:./dist/sitebuilder-preview.css",
        "build:sitebuilder-preview": "npm run sass:sitebuilder-preview && npm run tailwind:sitebuilder-preview",
        "tailwind:sitebuilder-default": "tailwindcss -i ./dist/sitebuilder-default.css -o ../wwwroot/css/sitebuilder-default.min.css --minify",
        "sass:sitebuilder-default": "sass ./Scss/SiteBuilderDefault.scss:./dist/sitebuilder-default.css",
        "build:sitebuilder-default": "npm run sass:sitebuilder-default && npm run tailwind:sitebuilder-default",
        "build": "npm run build:sitebuilder && npm run build:sitebuilder-preview && npm run build:sitebuilder-default"
    },
    "devDependencies": {
        "conc": "^0.0.3",
        "concurrently": "^8.2.2",
        "flowbite": "^2.1.1",
        "flowbite-typography": "^1.0.3",
        "sass": "^1.69.5",
        "tailwindcss": "^3.3.5"
    }
}
