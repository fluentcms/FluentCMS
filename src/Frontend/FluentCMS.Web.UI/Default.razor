@page "/{**Route:nonfile}"

@if (ViewContext.Type == ViewType.PageEdit)
{
    <HeadContent>
        <link rel="stylesheet" href="/_content/FluentCMS.Web.UI/css/sitebuilder.css">
        <link rel="stylesheet" href="/_content/FluentCMS.Web.UI.Components/css/app.css">
    </HeadContent>
    <div class="f-page-editor f-page-editor-sidebar-open f-page-editor-loading dark">
        <PageEditorHeader />
        <iframe class="f-page-editor-iframe" src="@NavigationManager.Uri.Replace("pageEdit", "pagePreview")">
        </iframe>
        <PageEditorSidebar />
    </div>
    <PageEditorForms />

    <script src="/_content/FluentCMS.Web.UI/js/sortable.js"></script>
    <script src="/_content/FluentCMS.Web.UI/js/sitebuilder.js"></script>
}
else if (ViewContext.Type == ViewType.PagePreview)
{
    <PageTitle>@ViewContext.Page?.Title</PageTitle>
    <HeadContent>
        <link rel="stylesheet" href="/_content/FluentCMS.Web.UI/css/sitebuilder.preview.css">
        @RenderDynamicContent(ViewContext.Page?.Layout?.Head ?? string.Empty)
    </HeadContent>
    @RenderDynamicContent(ViewContext.Page?.Layout?.Body ?? string.Empty)
    <script src="/_content/FluentCMS.Web.UI/js/sitebuilder.preview.js"></script>
}
else
{
    <PageTitle>@ViewContext.Page?.Title</PageTitle>
    <HeadContent>
        @RenderDynamicContent(ViewContext.Page?.Layout?.Head ?? string.Empty)
        <style>
            .f-edit-button {
                position: fixed;
                bottom: 1rem;
                right: 1rem;
                width: 32px;
                height: 32px;
                background-color: #2c5dd9;
                box-shadow: 0 0 16px -4px black;
                z-index: 100;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
            }
        </style>
    </HeadContent>
    <button id="editButton" class="f-edit-button">
        <svg class="w-5 h-5 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M11.32 6.176H5c-1.105 0-2 .949-2 2.118v10.588C3 20.052 3.895 21 5 21h11c1.105 0 2-.948 2-2.118v-7.75l-3.914 4.144A2.46 2.46 0 0 1 12.81 16l-2.681.568c-1.75.37-3.292-1.263-2.942-3.115l.536-2.839c.097-.512.335-.983.684-1.352l2.914-3.086Z" clip-rule="evenodd"/>
            <path fill-rule="evenodd" d="M19.846 4.318a2.148 2.148 0 0 0-.437-.692 2.014 2.014 0 0 0-.654-.463 1.92 1.92 0 0 0-1.544 0 2.014 2.014 0 0 0-.654.463l-.546.578 2.852 3.02.546-.579a2.14 2.14 0 0 0 .437-.692 2.244 2.244 0 0 0 0-1.635ZM17.45 8.721 14.597 5.7 9.82 10.76a.54.54 0 0 0-.137.27l-.536 2.84c-.07.37.239.696.588.622l2.682-.567a.492.492 0 0 0 .255-.145l4.778-5.06Z" clip-rule="evenodd"/>
        </svg>

    </button>

    @RenderDynamicContent(ViewContext.Page?.Layout?.Body ?? string.Empty)

    <script>
        editButton.addEventListener('click', () => {
            window.location.href = window.location.href + '?pageEdit=true'
        })

        window.addEventListener('fluentcms:init', () => {
            const state = JSON.parse(localStorage.getItem("SITE_BUILDER") ?? '{}')

            if(!state.done) {
                window.location.href = window.location.href + '?pageEdit=true'
            }
        })
    </script>
}
