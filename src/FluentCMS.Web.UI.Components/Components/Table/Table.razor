@inherits BaseComponent

@namespace FluentCMS.Web.UI.Components

@if(Visible)
{
    <div @attributes="AdditionalAttributes"
         class="@this.ClassName("TableParent")">
        <table class="@this.GetClasses()">
            @ChildContent
        </table>
    </div>
}

@code {
    [Parameter]
    [CSSProperty]
    public bool Hoverable { get; set; } = false;
}