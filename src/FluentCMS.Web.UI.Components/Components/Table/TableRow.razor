@inherits BaseComponent

@namespace FluentCMS.Web.UI.Components

@if(Visible)
{
    <tr @attributes="AdditionalAttributes"
        class="@this.GetClasses()"
        @onclick="OnClick">
        @ChildContent
    </tr>
}

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}