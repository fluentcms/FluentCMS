@inherits BaseComponent

@namespace FluentCMS.Web.UI.Components

@if(Visible)
{
    <button @attributes="AdditionalAttributes"
            class="@this.GetClasses()"
            type="button"
            @onclick="OnClick">
        <Icon Name="IconName.Close"
              Size="IconSize.Large" />
    </button>
}

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}
