@inherits FormInputsType<string>

@namespace FluentCMS.Web.UI.Components

<FormField Appearance="FormFieldAppearance.Select"
           Dense="@Dense"
           Disabled="@Disabled"
           Hint="@Hint"
           IconEnd="@IconEnd"
           IconStart="@IconStart"
           Id="@Id"
           Label="@Label"
           Name="@Name"
           Required="@Required">
    <InputSelect @attributes="AdditionalAttributes"
                 @bind-Value="Value"
                 class="@this.GetClasses()"
                 disabled="@Disabled"
                 id="@Id"
                 multiple="@Multiple"
                 name="@Name">
        @if (!string.IsNullOrEmpty(this.Placeholder))
        {
            <Option Selected>@Placeholder</Option>
        }
        @ChildContent
    </InputSelect>
</FormField>

@code {
    [Parameter]
    public bool Multiple { get; set; }
}
