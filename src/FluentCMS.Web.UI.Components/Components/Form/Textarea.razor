@inherits FormInputsType<string>

@namespace FluentCMS.Web.UI.Components

<FormField Appearance="FormFieldAppearance.Textarea"
           Dense="@Dense"
           Disabled="@Disabled"
           Hint="@Hint"
           IconEnd="@IconEnd"
           IconStart="@IconStart"
           Id="@Id"
           Label="@Label"
           Name="@Name"
           Required="@Required">
    <Microsoft.AspNetCore.Components.Forms.InputTextArea @attributes="AdditionalAttributes"
                                                         @bind-Value="Value"
                                                         class="@this.GetClasses()"
                                                         disabled="@Disabled"
                                                         id="@Id"
                                                         name="@Name"
                                                         placeholder="@Placeholder"
                                                         rows="@Rows" />
</FormField>

@code {
    [Parameter]
    public int Rows { get; set; } = 5;
}
