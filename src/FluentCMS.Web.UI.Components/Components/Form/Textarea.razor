@inherits FormInputsType<string>

@namespace FluentCMS.Web.UI.Components

<FormField Appearance="FormFieldAppearance.Textarea"
           Dense="@Dense"
           Disabled="@Disabled"
           Hint="@Hint"
           IconEnd="@IconEnd"
           IconStart="@IconStart"
           Id="@Id"
           Label="@Label"
           Name="@Name"
           Required="@Required"
           State="@State">
    <textarea @attributes="AdditionalAttributes"
              @bind="@Value"
              @bind:event="oninput"
              class="@this.GetClasses()"
              disabled="@Disabled"
              id="@Id"
              name="@Name"
              placeholder="@Placeholder"
              required="@Required"
              rows="@Rows" />
</FormField>

@code {
    [Parameter]
    public int Rows { get; set; } = 5;
}
