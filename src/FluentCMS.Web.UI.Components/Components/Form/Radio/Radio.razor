@typeparam TValue

@inherits FormCheckboxesType<TValue>

@namespace FluentCMS.Web.UI.Components

@if (Visible)
{
    <FormField Appearance="FormFieldAppearance.Radio"
               Field="this">
        <InputRadio @attributes="AdditionalAttributes"
                    Value="@Value"
                    ValueChanged="@ValueChanged"
                    ValueExpression="@ValueExpression"
                    class="@this.GetClasses("Radio")"
                    disabled="@Disabled"
                    id="@Id" />
    </FormField>
}
