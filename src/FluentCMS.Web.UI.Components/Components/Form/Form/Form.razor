@inherits BaseComponent

@namespace FluentCMS.Web.UI.Components

@if(Visible)
{
    <EditForm @attributes="AdditionalAttributes"
              class="@this.GetClasses()"
              EditContext="@Context"
              FormName="@FormName"
              method="@Method"
              novalidate
              OnValidSubmit="@OnValidSubmit">
        <DataAnnotationsValidator />
        @ChildContent
    </EditForm>
}
