@inherits FormInputsType<int?>

@namespace FluentCMS.Web.UI.Components

<FormField Appearance="FormFieldAppearance.Input"
           Dense="@Dense"
           Disabled="@Disabled"
           Hint="@Hint"
           IconEnd="@IconEnd"
           IconStart="@IconStart"
           Id="@Id"
           Label="@Label"
           Name="@Name"
           Required="@Required">
    <Microsoft.AspNetCore.Components.Forms.InputNumber @attributes="AdditionalAttributes"
                                                       @bind-Value="Value"
                                                       class="@this.GetClasses()"
                                                       disabled="@Disabled"
                                                       id="@Id"
                                                       name="@Name"
                                                       placeholder="@Placeholder" />
</FormField>
