@inherits FormCheckboxesType<bool>

@namespace FluentCMS.Web.UI.Components

<FormField Appearance="FormFieldAppearance.Checkbox"
           Field="this">
    <InputCheckbox @attributes="AdditionalAttributes"
                   @bind-Value="Value"
                   class="@this.GetClasses()"
                   disabled="@Disabled"
                   id="@Id"
                   name="@Name" />
</FormField>
