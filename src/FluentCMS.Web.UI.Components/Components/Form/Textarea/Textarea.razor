@inherits FormInputsType<string>

@namespace FluentCMS.Web.UI.Components

@if(Visible)
{
    <FormField Appearance="FormFieldAppearance.Textarea"
               Field="this">
        <InputTextArea @attributes="AdditionalAttributes"
                    @bind-Value="Value"
                    class="@this.GetClasses()"
                    disabled="@Disabled"
                    id="@Id"
                    name="@Name"
                    placeholder="@Placeholder"
                    rows="@Rows" />
    </FormField>
}
