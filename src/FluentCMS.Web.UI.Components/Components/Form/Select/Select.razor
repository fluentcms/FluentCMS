@typeparam TValue

@inherits FormInputsType<TValue>

@namespace FluentCMS.Web.UI.Components

@if (Visible)
{
    <FormField Appearance="FormFieldAppearance.Select"
               Field="this">
        <InputSelect @attributes="AdditionalAttributes"
                     Value="@Value"
                     ValueChanged="@ValueChanged"
                     ValueExpression="@ValueExpression"
                     class="@this.GetClasses()"
                     disabled="@Disabled"
                     id="@Id"
                     multiple="@Multiple">
            @if (!string.IsNullOrEmpty(this.Placeholder))
            {
                <option selected>@Placeholder</option>
            }
            @ChildContent
        </InputSelect>
    </FormField>
}
