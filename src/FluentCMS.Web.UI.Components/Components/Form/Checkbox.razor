@inherits FormCheckboxesType<bool>

@namespace FluentCMS.Web.UI.Components

<FormField Appearance="FormFieldAppearance.Checkbox"
           Dense="@Dense"
           Disabled="@Disabled"
           Hint="@Hint"
           Id="@Id"
           Label="@Label"
           Name="@Name"
           Required="@Required">
    <ChildContent>
        <InputCheckbox @attributes="AdditionalAttributes"
                       @bind-Value="Value"
                       class="@this.GetClasses()"
                       disabled="@Disabled"
                       id="@Id"
                       name="@Name" />
    </ChildContent>
    <LabelFragment>
        @LabelFragment
    </LabelFragment>
</FormField>
