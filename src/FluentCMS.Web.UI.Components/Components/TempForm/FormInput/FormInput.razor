@inherits BaseInputBlock<string?>

@namespace FluentCMS.Web.UI.Components

@if (Visible)
{
    <FormField Cols="Cols" Dense="@Dense" Id="@Id" Label="@Label" LabelFragment="@LabelFragment" Required="@Required">
        <input type="text" @attributes="AdditionalAttributes" class="@this.GetClasses() @Class" disabled="@Disabled" id="@Id"
               name="@NameAttributeValue" placeholder="@Placeholder" readonly="@Readonly" @bind=CurrentValueAsString />
    </FormField>
}
