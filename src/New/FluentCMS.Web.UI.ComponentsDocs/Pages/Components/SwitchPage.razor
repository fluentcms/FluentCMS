@page "/components/switch"
@layout ComponentsLayout

<Page>
    <PageHeader Title="Switches" />
    <PageBody>
        <ComponentPreview Title="Default">
            <Switch />
        </ComponentPreview>

        <ComponentPreview Title="Label">
            <Switch Label="Switch" />
        </ComponentPreview>

        <ComponentPreview Title="Checked">
            <Switch Value="true" />
        </ComponentPreview>

        <ComponentPreview Title="Dense">
            <Switch Dense="true" />
            <Switch Dense="true" />
            <Switch Dense="true" />
        </ComponentPreview>

        <ComponentPreview Title="Disabled">
            <Switch Disabled="true" />
        </ComponentPreview>

        <ComponentPreview Title="Hint">
            <Switch Hint="This is a hint"
                    Label="Switch" />
        </ComponentPreview>

        <ComponentPreview Title="Initial">
            <Switch @bind-Value="Value1" />
            <Badge Color="Value1 ? Color.Success : Color.Danger">
                @Value1
            </Badge>
        </ComponentPreview>

        <ComponentPreview Title="Bind Value">
            <Switch @bind-Value="Value2" />
            <Switch @bind-Value="Value2" />
        </ComponentPreview>
    </PageBody>
</Page>

@code {
    private bool Value1 = true;
    private bool Value2;
}
