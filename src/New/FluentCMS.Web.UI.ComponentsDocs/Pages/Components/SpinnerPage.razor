@page "/components/spinner"
@layout ComponentsLayout

<Page>
    <PageHeader Title="Spinners" />

    <ComponentPreview Title="Default"
                      Description="Use the spinner component as a loader indicator in your projects when fetching data based on an animated SVG">
        <Stack>
            <Spinner />
            <Spinner Color="@Color.Primary" />
            <Spinner Color="@Color.Secondary" />
            <Spinner Color="@Color.Success" />
            <Spinner Color="@Color.Danger" />
            <Spinner Color="@Color.Warning" />
            <Spinner Color="@Color.Info" />
        </Stack>
    </ComponentPreview>
</Page>
