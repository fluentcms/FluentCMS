@inherits BasePlugin

<PluginForm Model="@Model" Title="Update User" OnSubmit="OnSubmit">
    <PluginFormInput Value="User.Username" Label="UserName" Disabled="true" Cols="6" />
    <PluginFormInput @bind-Value="Model.Email" Label="Email" Placeholder="Enter Email..." Cols="6" />
    <PluginFormInput @bind-Value="Model.FirstName" Label="FirstName" Placeholder="Enter FirstName..." Cols="6" />
    <PluginFormInput @bind-Value="Model.LastName" Label="LastName" Placeholder="Enter LastName..." Cols="6" />
    <PluginFormInput @bind-Value="Model.PhoneNumber" Label="Phone Number" Placeholder="Enter Phone Number..." Cols="6" />
    <PluginFormActions Submit="true" Cancel="true" />
</PluginForm>
