@inherits BasePlugin

<PluginBody Title="User Detail">
    <Grid Gutter="GridGutter.Large">
        <GridItem Small="GridItemColumn.Twelve" Medium="GridItemColumn.Seven" Large="GridItemColumn.Nine">
            <Grid Gutter="GridGutter.Large" JustifySmall="GridJustify.End">
                <GridItem Small="GridItemColumn.Twelve">
                    <Checkbox @bind-Value="@User.Enabled" Label="Enabled" Dense Disabled />
                </GridItem>
                <GridItem Small="GridItemColumn.Twelve">
                    <Typography Weight="TextWeight.Bold">FirstName:</Typography>
                    <Typography>@User.FirstName</Typography>
                </GridItem>
                <GridItem Small="GridItemColumn.Twelve">
                    <Typography Weight="TextWeight.Bold">LastName:</Typography>
                    <Typography>@User.LastName</Typography>
                </GridItem>
                <GridItem Small="GridItemColumn.Twelve">
                    <Typography Weight="TextWeight.Bold">Phone:</Typography>
                    <Typography>@User.PhoneNumber</Typography>
                </GridItem>
                <GridItem Small="GridItemColumn.Twelve">
                    <Typography Weight="TextWeight.Bold">Username:</Typography>
                    <Typography>@User.Username</Typography>
                </GridItem>
                <GridItem Small="GridItemColumn.Twelve">
                    <Typography Weight="TextWeight.Bold">Email:</Typography>
                    <Typography>@User.Email</Typography>
                </GridItem>
            </Grid>
        </GridItem>
        <GridItem Small="GridItemColumn.Twelve" Medium="GridItemColumn.Five" Large="GridItemColumn.Three">
            <Card>
                <CardBody>
                    @if (!string.IsNullOrEmpty(User.CreatedBy))
                    {
                        <Typography Weight="TextWeight.Bold">Created By</Typography>
                        <Typography>@User.CreatedBy</Typography>
                        <Spacer />
                    }
                    @if (!string.IsNullOrEmpty(User.CreatedAt.ToString()))
                    {
                        <Typography Weight="TextWeight.Bold">Created At</Typography>
                        <Typography>@User.CreatedAt</Typography>
                        <Spacer />
                    }
                    @if (!string.IsNullOrEmpty(User.ModifiedBy))
                    {
                        <Typography Weight="TextWeight.Bold">Modified By</Typography>
                        <Typography>@User.ModifiedBy</Typography>
                        <Spacer />
                    }
                    @if (!string.IsNullOrEmpty(User.ModifiedAt.ToString()))
                    {
                        <Typography Weight="TextWeight.Bold">Modified At</Typography>
                        <Typography>@User.ModifiedAt</Typography>
                    }
                </CardBody>
            </Card>
            <Spacer />
            <Button Block="true"
                    Color="Color.Primary"
                    Href="@NavigationManager.Plugin("User Management", "Update User", new { id = User.Id })"
                    Item="true"
                    Outline="true">
                <Icon Name="IconName.Edit" />
                Edit
            </Button>
        </GridItem>
    </Grid>
</PluginBody>
