@inherits BasePlugin
<Page>
    <PageHeader HasBack="true" Title="Create User" />
    <PageBody>
        <Grid Gutter="GridGutter.Medium">
            <GridItem Small="GridItemColumn.Twelve">
                <MyForm Model="@Model" OnSubmit="OnSubmit" Name="@FORM_NAME">
                    <Card>
                        <CardBody>
                            <InputText @bind-Value="Model.Username" placeholder="Enter Username..." />
                            <ValidationMessage For="()=>Model.Username"></ValidationMessage>
                            <InputText @bind-Value="Model.Email" Placeholder="Enter Email..." />
                            <ValidationMessage For="()=>Model.Email"></ValidationMessage>
                            <InputText @bind-Value="Model.PhoneNumber" Placeholder="Enter PhoneNumber..." />
                            <ValidationMessage For="()=>Model.PhoneNumber"></ValidationMessage>
                            <InputText @bind-Value="Model.Password" Placeholder="Enter Password..." />
                            <ValidationMessage For="()=>Model.Password"></ValidationMessage>
                            <InputCheckbox hidden @bind-Value="Model.Enabled" />
                            <Spacer />
                            <ButtonGroup>
                                <Button Href="@BackUrl">
                                    Cancel
                                </Button>
                                <Button Color="Color.Primary" Type="ButtonType.Submit">
                                    Save
                                </Button>
                            </ButtonGroup>
                        </CardBody>
                    </Card>
                </MyForm>
            </GridItem>
        </Grid>
    </PageBody>
</Page>


