<Page>
    <PageHeader HasBack="true"
                Title="Create User">
    </PageHeader>
    <PageBody>
        <Grid Gutter="GridGutter.Medium">
            <GridItem Small="GridItemColumn.Twelve">
                <Form Model="@Model"
                      OnSubmit="OnSubmit">
                    <Card>
                        <CardBody>
                            <Input @bind-Value="Model.Username"
                                   Label="Username"
                                   Name="Username"
                                   Placeholder="Enter Username..."
                                   Required="true"/>
                            <Input @bind-Value="Model.Email"
                                   Label="Email"
                                   Name="Email"
                                   Placeholder="Enter Email..."
                                   Required="true" />
                            <Input @bind-Value="Model.Password"
                                   Label="Password"
                                   Name="Password"
                                   Placeholder="Enter Password..."
                                   Type="InputType.Password"/>
                            <Spacer/>
                            @if(!string.IsNullOrEmpty(Message))
                            {
                                <Typography>
                                    @Message
                                </Typography>
                                <Spacer/>
                            }
                        </CardBody>
                        <CardActions>
                            <Button OnClick="GoBack">
                                Cancel
                            </Button>
                            <Button Color="Color.Primary"
                                    Type="ButtonType.Submit">
                                Save
                            </Button>
                        </CardActions>
                    </Card>
                </Form>
            </GridItem>
        </Grid>
    </PageBody>
</Page>

@code {
    [Inject]
    IJSRuntime JsRuntime { set; get; } = default!;

    [Inject]
    NavigationManager NavigationManager { set; get; } = default!;

    [Inject]
    UserClient UserClient { get; set; } = default!;

    string? Message { get; set; }

    UserCreateRequest Model { get; set; } = new();

    async Task GoBack()
    {
        await JsRuntime.InvokeVoidAsync("history.back");
    }

    async Task OnSubmit()
    {
        try
        {
            var newUser = await UserClient.CreateAsync(Model);
            Message = "Done!";
            GoBack();
        }
        catch (Exception ex)
        {
            Message = ex.ToString();
        }
    }
}
