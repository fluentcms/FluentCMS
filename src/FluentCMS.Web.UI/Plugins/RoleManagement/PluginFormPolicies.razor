@inherits BaseComponent

@namespace FluentCMS.Web.UI.Plugins.RoleManagement

<PluginFormField>    
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" Visible="!string.IsNullOrEmpty(Label)">
        @Label
    </label>
    <Card>
        <CardBody>
            @for(var i = 0; i < Policies.Count; i++)
            {
                int index = i;   
                <div>
                    <Divider>@Policies[index].Area</Divider>
                    <PluginFormCheckboxGroup @bind-Value="@Value[index].Actions" Data="Policies[index].Actions" />
                </div>
            }
        </CardBody>
    </Card>
    <Spacer Size="SpacerSize.Large" />
</PluginFormField>
