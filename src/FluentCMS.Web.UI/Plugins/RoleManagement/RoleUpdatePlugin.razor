@inherits BasePlugin
@rendermode InteractiveServer

<PluginForm Model="@Model" Name="@FORM_NAME" Title="Update Role" OnSubmit="OnSubmit">
    <PluginFormTextInput @bind-Value="Model.Name" Cols="12" Label="Name" Placeholder="Enter Name" Required />
    <PluginFormTextarea @bind-Value="Model.Description" Cols="12" Label="Description" Placeholder="Enter Description" Required />
    <PluginFormPolicies @bind-Value="Model.Policies" Policies="@Policies" />
    <PluginFormActions Cancel Submit />
</PluginForm>
