@namespace FluentCMS.Web.UI.Plugins.ContentTypeManagement.ContentTypeFields

<Grid GutterX="GridGutter.Large">
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <Input Id="contentTypeFieldModalDefaultValueInput"
               Label="Default Value"
               Name="DefaultValue"
               Placeholder="Enter Default Value..."
               Type="InputType.DatetimeLocal"
               Value="@(ParseDate(Model.DefaultValue))"
               ValueChanged="@((DateTime? value) => Model.DefaultValue = value)" />
    </GridItem>
</Grid>

<FieldAdvancedSettings Localization="false"
                       Range="false" />

@code {
    [CascadingParameter]
    public ContentTypeFieldResponse Model { get; set; }

    private DateTime? ParseDate(object obj)
    {
        if (obj is DateTime) return (DateTime)obj;
        if (obj is string) return DateTime.Parse((string)obj);
        return null;
    }
}
