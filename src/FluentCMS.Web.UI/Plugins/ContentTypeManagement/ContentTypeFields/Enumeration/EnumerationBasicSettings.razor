@namespace FluentCMS.Web.UI.Plugins.ContentTypeManagement.ContentTypeFields

<Grid GutterX="GridGutter.Large">
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <FieldName />
    </GridItem>
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <Spacer />
    </GridItem>
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <Textarea Label="Values (one line per value)"
                  Placeholder="@("Ex:\nmorning\nmoon\nevening")"
                  Value="@(Model.GetValue<string>("Values"))"
                  ValueChanged="@((string value) => Model.SetValue<string>("Values", value))" />
    </GridItem>
</Grid>


@code {
    [CascadingParameter]
    public ContentTypeFieldResponse Model { get; set; }
}
