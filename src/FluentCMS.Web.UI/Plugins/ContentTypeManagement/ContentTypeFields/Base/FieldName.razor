@namespace FluentCMS.Web.UI.Plugins.ContentTypeManagement.ContentTypeFields

<Input @bind-Value="Model.Slug"
       Disabled="editing"
       Id="contentTypeFieldModalSlugInput"
       Label="Slug"
       Name="Slug"
       Placeholder="Enter Slug..."
       Required="true" />

@code {
    [CascadingParameter(Name = "EditingMode")]
    public bool editing { get; set; }

    [CascadingParameter]
    public ContentTypeField Model { get; set; }
}
