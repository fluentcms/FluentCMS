@namespace FluentCMS.Web.UI.Plugins.ContentTypeManagement.ContentTypeFields

<Grid GutterX="GridGutter.Large">
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <Select @bind-Value="Model.DefaultValue"
                Label="Default Value"
                Name="DefaultValue">
            <Option Value="0">
                null
            </Option>
            <Option Value="1">
                false
            </Option>
            <Option Value="2">
                true
            </Option>
        </Select>
    </GridItem>
</Grid>

<FieldAdvancedSettings Range="false"
                       Unique="false" />

@code {
    [CascadingParameter]
    public ContentTypeField Model { get; set; }
}
