@namespace FluentCMS.Web.UI.Plugins.ContentTypeManagement.ContentTypeFields

<Grid GutterX="GridGutter.Large">
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <Input Id="contentTypeFieldModalDefaultValueInput"
               Label="Default Value"
               Name="DefaultValue"
               Placeholder="Enter Default Value..."
               Value="@((string?)Model.DefaultValue)"
               ValueChanged="@((string? value) => Model.DefaultValue = value)" />
    </GridItem>
    <GridItem Small="GridItemColumn.Twelve"
              Medium="GridItemColumn.Six">
        <Input Hint="The text of the regular expression"
               Label="RegExp pattern"
               Value="@(Model.GetValue<string>("Pattern"))"
               ValueChanged="@((string value) => Model.SetValue<string>("Pattern", value))" />
    </GridItem>
</Grid>

<FieldAdvancedSettings />

@code {
    [CascadingParameter]
    public ContentTypeFieldResponse Model { get; set; }
}
