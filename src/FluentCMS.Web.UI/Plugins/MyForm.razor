<EditForm Model="@Model" OnValidSubmit="HandleValidSubmit" FormName="@Name" Enhance>
    <Typography Size="TextSize.H5">
        @Title
    </Typography>
    <Spacer />
    @ChildContent
    @if (_showMessage)
    {
        <Spacer />
        <Alert Type="AlertType.Success">
            <b>@Message</b>
        </Alert>
    }
    @if (!string.IsNullOrEmpty(Error))
    {
        <Spacer />
        <Alert Type="AlertType.Danger">
            <b>@Error</b>
        </Alert>
    }
    <DataAnnotationsValidator />
    <ValidationSummary />
</EditForm>
