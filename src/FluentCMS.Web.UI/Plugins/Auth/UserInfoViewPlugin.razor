@using Microsoft.AspNetCore.Components.Authorization;
@using System.Security.Claims

<AuthorizeView>
    <Authorized>
        @* TODO: remove classes *@
        <a href="/auth/profile"
           class="px-5 py-3 border-t border-gray-200 dark:border-gray-700">
            <Grid ItemsSmall="GridItems.Center"
                  GutterX="GridGutter.Large">
                <GridItem>
                    <Avatar>
                        @context.User.FindFirstValue(ClaimTypes.NameIdentifier)?.First()
                    </Avatar>
                </GridItem>
                <GridItem>
                    <Typography Weight="TextWeight.SemiBold">
                        @context.User.FindFirstValue(ClaimTypes.NameIdentifier).ToUpper()
                    </Typography>
                </GridItem>
            </Grid>
        </a>
    </Authorized>
    <Authorizing>
        Authorizing...
    </Authorizing>
    <NotAuthorized>
        NotAuthorized!
    </NotAuthorized>
</AuthorizeView>
