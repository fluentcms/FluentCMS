@inherits BasePlugin

<AuthPluginForm Model="@Model" Name="@FORM_NAME" Title="Reset your Password" Description="Your new password must be different from previous used passwords." OnSubmit="@OnSubmit">
    <PluginFormHiddenInput @bind-Value="Model!.Email" Required />
    <PluginFormHiddenInput @bind-Value="Model!.Token" Required />
    <PluginFormTextInput @bind-Value="Model!.NewPassword" Label="New Password" Placeholder="Enter your new password" Required type="password" />
    <PluginFormField>
        <Button Block Color="Color.Primary" Type="ButtonType.Submit">Submit</Button>
    </PluginFormField>
</AuthPluginForm>
