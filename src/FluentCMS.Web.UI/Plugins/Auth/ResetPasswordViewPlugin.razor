@inherits BasePlugin

<AuthPluginForm Model="@Model" Name="@FORM_NAME" Title="Reset you Password" OnSubmit="@OnSubmit">
    <PluginFormField>
        <Typography>
            We’ll email you instructions to reset your password. If you don’t have access to your email anymore, you can try account recovery.
        </Typography>
        <Spacer />
    </PluginFormField>
    <PluginFormTextInput @bind-Value="Model!.Email" Label="Email" Placeholder="Enter your email" Required />
    <PluginFormTextInput @bind-Value="Model!.Token" Label="Token" Placeholder="Enter your token" Required />
    <PluginFormTextInput @bind-Value="Model!.NewPassword" Label="New Password" Placeholder="Enter your new password" Required type="password" />
    <PluginFormField>
        <Button Block Color="Color.Primary" Type="ButtonType.Submit">Submit</Button>
    </PluginFormField>
</AuthPluginForm>
