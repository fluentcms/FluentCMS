@inherits BasePlugin

<PluginForm Title="Update Profile" Model="@Model" OnSubmit="@OnSubmit">

      <PluginFormInput @bind-Value="Model.FirstName" Label="First Name" Placeholder="Enter Profile First Name..."/>
      <PluginFormInput @bind-Value="Model.LastName" Label="Last Name" Placeholder="Enter Profile Last Name..."/>
      <PluginFormInput @bind-Value="Model.Email" Label="Email" Type="InputType.Email" Placeholder="Enter Profile Email..."/>
      <PluginFormInput @bind-Value="Model.PhoneNumber" Label="Phone Number" Placeholder="Enter Profile Phone Number..."/>

    <PluginFormActions Submit="true" Cancel="true" > </PluginFormActions>
</PluginForm>
