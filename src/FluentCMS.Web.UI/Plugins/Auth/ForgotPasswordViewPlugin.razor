@inherits BasePlugin

<AuthPluginForm Model="@Model" Name="@FORM_NAME" Title="Forgot Password" OnSubmit="@OnSubmit">
    <PluginFormField>
        <Typography>
            We’ll email you instructions to reset your password.
        </Typography>
        <Spacer />
    </PluginFormField>
    <PluginFormTextInput @bind-Value="Model!.Email" Label="Email" Placeholder="Enter your email" Required />
    <PluginFormField>
        <Button Block Color="Color.Primary" Type="ButtonType.Submit">Submit</Button>
    </PluginFormField>
</AuthPluginForm>
