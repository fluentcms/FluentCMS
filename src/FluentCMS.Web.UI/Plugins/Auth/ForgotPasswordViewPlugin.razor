@inherits BasePlugin

@if (!string.IsNullOrEmpty(Sent) && Sent == "true")
{
    <div class="flex items-center justify-start">
        <div>
            <Typography Weight="TextWeight.Bold">Email sent!</Typography>
            <Typography>please check your inbox</Typography>
        </div>
    </div>
}
else
{
    <AuthPluginForm Model="@Model" Name="@FORM_NAME" Title="Forgot Password" Description="We'll email you instructions to reset your password." OnSubmit="@OnSubmit">
        <PluginFormTextInput @bind-Value="Model!.Email" Label="Email" Placeholder="Enter your email" Required />
        <PluginFormField>
            <Button Block Color="Color.Primary" Type="ButtonType.Submit">Submit</Button>
        </PluginFormField>
    </AuthPluginForm>
}
