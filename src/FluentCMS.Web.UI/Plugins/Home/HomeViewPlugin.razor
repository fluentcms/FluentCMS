@using Version = FluentCMS.Web.UI.Components.Version
@using System.Reflection
<Page>
    <PageHeader Title="Welcome" />
    <PageBody>
        <Typography Size="TextSize.Small">
            We hope you are making progress on your project! Feel free to read the latest news about FluentCMS. We are
            giving our best to improve the product based on your feedback.
        </Typography>

        <Spacer />
        <Grid Gutter="GridGutter.Large">
            <GridItem Small="GridItemColumn.Twelve" Medium="GridItemColumn.Eight">
                @if(showTour)
                {
                    <Card>
                        <CardBody>
                            <CardTitle>There are a few steps to get started</CardTitle>
                            <Stack Vertical="true" Align="StackAlign.Start">
                                <Spacer/>
                                <Stepper>
                                    <StepperItem Icon="IconName.TableColumn"
                                                Title="ContentType"
                                                Subtitle="First step is to create a content Type">
                                        <Button Color="Color.Primary"
                                                Href="/admin/content-types">
                                            Create ContentType
                                        </Button>
                                    </StepperItem>
                                    <StepperItem Icon="IconName.PenNib"
                                                Title="Content"
                                                Subtitle="Then you can create content">
                                        <Button Color="Color.Primary"
                                                Href="/admin/content">
                                            Create Content
                                        </Button>
                                    </StepperItem>
                                    <StepperItem Icon="IconName.ClipboardList"
                                                Title="Api"
                                                Subtitle="Finally you are able to use the API">
                                        <Button Color="Color.Primary">
                                            Test API
                                        </Button>
                                    </StepperItem>
                                </Stepper>
                                <Button Color="Color.Primary" 
                                        Outline="true" 
                                        OnClick="() => showTour = false">
                                    Skip the tour
                                </Button>
                            </Stack>
                        </CardBody>
                    </Card>
                } else {
                    <a href="/api/doc"
                    target="_blank">

                        <Card>
                            <CardBody>
                                <Stack>
                                    <Icon Color="Color.Primary" Name="IconName.Documentation" Size="IconSize.X2" />
                                    <div>
                                        <Typography Size="TextSize.H5">Documentation</Typography>
                                        <Typography Size="TextSize.Small">
                                            Discover the essential concepts, guides and instructions.
                                        </Typography>
                                    </div>
                                </Stack>
                            </CardBody>
                        </Card>
                    </a>

                    <Spacer Size="SpacerSize.Small" />
                    <a href="https://github.com/fluentcms/FluentCMS/blob/dev/CHANGELOG.md"
                    target="_blank">

                        <Card>
                            <CardBody>
                                <Stack>
                                    <Icon Color="Color.Success" Name="IconName.Clock" Size="IconSize.X2" />
                                    <div>
                                        <Typography Size="TextSize.H5">Changelog</Typography>
                                        <Typography Size="TextSize.Small">
                                            See how FluentCMS is evolving over time.
                                        </Typography>

                                    </div>
                                </Stack>
                            </CardBody>
                        </Card>
                    </a>
                    <Spacer Size="SpacerSize.Small" />
                    <a href="https://github.com/fluentcms/FluentCMS"
                    target="_blank">
                        <Card>
                            <CardBody>
                                <Stack>
                                    <Icon Color="Color.Warning" Name="IconName.Code" Size="IconSize.X2" />
                                    <div>
                                        <Typography Size="TextSize.H5">Code Examples</Typography>
                                        <Typography Size="TextSize.Small">
                                            Learn by testing real projects developed the community.
                                        </Typography>
                                    </div>
                                </Stack>
                            </CardBody>
                        </Card>
                    </a>

                    <Spacer Size="SpacerSize.Small" />
                    <!-- TODO: Do not use tailwind classes -->
                    <Version Class="hidden md:block" Assembly="Assembly.GetEntryAssembly()"></Version>
                }
            </GridItem>
            <GridItem Small="GridItemColumn.Twelve" Medium="GridItemColumn.Four">

                <Card>
                    <CardBody>
                        <Typography Size="TextSize.H5" Weight="TextWeight.Bold">
                            Join the community
                        </Typography>
                        <Spacer />
                        <Typography Size="TextSize.Small">
                            Discuss with team members, contributors
                            and developers on different channels.
                        </Typography>
                        <Spacer />
                        <Card>
                            <Button Block="true" Color="Color.Primary" Ghost="true"
                                Href="https://github.com/fluentcms/FluentCMS"
                                target="_blank">
                                <Icon Name="IconName.Github" />
                                Github
                            </Button>
                        </Card>
                        <Spacer />
                        <Card>
                            <Button Block="true" Color="Color.Primary" Ghost="true"
                                Href="https://discord.gg/WyqYuC6YbY"
                                target="_blank">
                                <Icon Name="IconName.Discord" />
                                Discord
                            </Button>
                        </Card>
                    </CardBody>
                </Card>
                
                <!-- TODO: Do not use tailwind classes -->
                <Version Class="md:hidden" Assembly="Assembly.GetEntryAssembly()"></Version>
            </GridItem>
        </Grid>
    </PageBody>
</Page>


@code {
    bool showTour = true;
}