@inherits BasePlugin
@rendermode InteractiveServer

@namespace FluentCMS.Web.UI.Plugins.SiteManagement

<PluginForm Model="@Model" Name="@FORM_NAME" Title="Create New Site" OnSubmit="OnSubmit">
    <FormInput @bind-Value="Model.Name" Label="Name" Placeholder="Enter Name" Required />
    <FormTextarea @bind-Value="Model.Description" Label="Description" Placeholder="Enter Description" />
    @if(Layouts != null)
    {
        <FormSelect @bind-Value="Model.LayoutId" Label="Default Layout" Placeholder="Choose Layout" >
            @foreach (var item in Layouts)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </FormSelect>
    }
    <FormTextarea @bind-Value="Urls" Label="Urls" Placeholder="Enter each url in new line" />
    <FormActions Cancel Submit />
</PluginForm>
