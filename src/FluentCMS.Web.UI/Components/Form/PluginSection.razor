@namespace FluentCMS.Web.UI

<div class="m-4">
    @if (!string.IsNullOrEmpty(Title))
    {
        <Grid ItemsSmall="GridItems.Center" JustifySmall="GridJustify.Between">
            <GridItem>
                <Typography Size="TextSize.H5">@Title</Typography>
            </GridItem>
            <GridItem>
                @ActionsFragment
            </GridItem>
        </Grid>
        <Spacer />
    }
    <Card>
        @if (ChildContent != null)
        {
            <CardBody>
                @ChildContent
            </CardBody>
        }
    </Card>
</div>

@code {
    [Parameter]
    public RenderFragment? ActionsFragment { get; set; }
}
