@namespace FluentCMS.Web.UI.Plugins.Components

<Card>
    <Spacer Size="SpacerSize.Large" />
    <Spacer Size="SpacerSize.Large" />
    <Stack Gutter="StackGutter.Medium" Vertical="true">
        <GridItem Visible="Icon != IconName.Default">
            <Icon Color="Color.Secondary" Name="Icon" Size="IconSize.X3" />
        </GridItem>
        <Typography Color="Color.Secondary">@Message</Typography>
        <Grid JustifySmall="GridJustify.Center" ItemsSmall="GridItems.Center">
            <GridItem>
                <Stack>
                    @ChildContent
                </Stack>
            </GridItem>
        </Grid>
    </Stack>
    <Spacer Size="SpacerSize.Large" />
    <Spacer Size="SpacerSize.Large" />
</Card>
