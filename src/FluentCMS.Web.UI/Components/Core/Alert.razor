@inherits BaseComponent

@if (Show)
{
    <div @attributes="AdditionalAttributes"
         class="@this.GetClasses()"
         role="alert">
        <div>
            @ChildContent
        </div>
        @if (Dismissible)
        {
            <CloseButton class="@this.ClassName("AlertClose")"
                         OnClick="Close" />
        }
    </div>
}

@code {
    [Parameter]
    public bool Dismissible { get; set; } = false;

    [Parameter]
    public bool Show { get; set; } = true;

    [Parameter]
    [CssProperty]
    public AlertTypeEnum Type { get; set; } = AlertTypeEnum.Default;

    public void Close()
    {
        Show = false;
    }
}
