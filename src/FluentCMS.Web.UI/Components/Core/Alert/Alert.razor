@inherits BaseComponent
@if (Show)
{
    <div class=@this.GetClasses() role="alert">
        <AlertIcon />
        <AlertContent>
            @ChildContent
        </AlertContent>

        @if (Dismissible)
        {
            <AlertClose OnClick="() => OnClose()" />
        }
    </div>
}
@code {
    [Parameter]
    [CssProperty]
    public bool Show { get; set; } = true;

    [Parameter]
    [CssProperty]
    public AlertTypeEnum Type { get; set; } = AlertTypeEnum.Default;

    [Parameter]
    public bool Dismissible { get; set; } = false;

    private void OnClose()
    {
        Show = false;
    }
}
