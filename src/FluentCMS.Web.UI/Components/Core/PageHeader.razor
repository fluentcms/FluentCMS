<div class=@this.GetClasses() @attributes="@AdditionalAttributes">
    <h2 class=@this.ClassName("PageTitle")>@Title</h2>
    <div class=@this.ClassName("PageActions")>
        <ButtonGroup>
            @PageActions
        </ButtonGroup>
    </div>
</div>


@code {

    [Parameter]
    public string Title { get; set; } = String.Empty;

    [Parameter]
    public RenderFragment PageActions { get; set; }
}