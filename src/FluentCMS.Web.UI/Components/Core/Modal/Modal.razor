@inherits BaseComponent

<div class="@this.GetClasses() h-[calc(100%-1rem)]" @attributes=@AdditionalAttributes tabindex="-1">
    <div>
        <ModalContent>
            @ChildContent
        </ModalContent>
    </div>
</div>

@code {
    [Parameter]
    [CssProperty]
    public SizeEnum Size { get; set; } = SizeEnum.Medium;

    [Parameter]
    [CssProperty]
    public bool Open { get; set; }

    [Parameter]
    [CssProperty]
    public bool Static { get; set; }
}
