<li class="me-2" role="presentation">
    @* Should use <a> *@
    @if (Active) {
        <span class="f-tab-item f-tab-item-active" aria-current="page" id="tab-@Id" @onclick="() => ActivateTab($\"#panel-{Id}\")" type="button" role="tab" aria-controls="panel-@Id" aria-selected="true">@ChildContent</span>
    }else if(Disabled) {
        <span class="f-tab-item f-tab-item-disabled" id="tab-@Id" @onclick="() => ActivateTab($\"#panel-{Id}\")" type="button" role="tab" aria-controls="panel-@Id" aria-selected="false">@ChildContent</span>
    } else {
        <span class="f-tab-item" id="tab-@Id" @onclick="() => ActivateTab($\"#panel-{Id}\")" type="button" role="tab" aria-controls="panel-@Id" aria-selected="false">@ChildContent</span>
    }
</li>

