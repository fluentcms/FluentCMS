<li class="me-2" role="presentation">
    @* Should use <a> *@

    @if (Active)
    {
        <span class="f-tab-item f-tab-item-active" aria-current="page" id="tab-@Index"
            @onclick="() => Parent.ActiveTab(Index)" type="button" role="tab" aria-controls="panel-@Index"
            aria-selected="true">@ChildContent</span>
    }
    else if (Disabled)
    {
        <span class="f-tab-item f-tab-item-disabled" id="tab-@Index" type="button"
            role="tab" aria-controls="panel-@Index" aria-selected="false">@ChildContent</span>
    }
    else
    {
        <span class="f-tab-item" id="tab-@Index" @onclick="() => Parent.ActiveTab(Index)" type="button" role="tab"
            aria-controls="panel-@Index" aria-selected="false">@ChildContent</span>
    }
</li>

@code {

    [CascadingParameter]
    protected Tabs? Parent { get; set; }

    [Parameter]
    public int Index { get; set; } = default!;

    [Parameter]

public bool Active {get; set; } = false;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}