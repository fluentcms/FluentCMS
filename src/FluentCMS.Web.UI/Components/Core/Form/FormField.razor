@inherits BaseComponent

<div class=@GetClasses() @attributes="@AdditionalAttributes">
    @if (Label != String.Empty)
    {
        <Label For="@Id">@Label</Label>
    }
    @ChildContent
</div>

@code {
    [Parameter]
    public string Label { get; set; } = String.Empty;

    [Parameter]
    public string Id { get; set; }
}