@inherits InputBaseComponent<string>

<FormField Dense="@Dense"
           Hint="@Hint"
           IconEnd="@IconEnd"
           IconStart="@IconStart"
           Id="@Id"
           Label="@Label"
           Required="@Required"
           State="@State">
    <input @attributes="AdditionalAttributes"
           @bind="@Value"
           @bind:event="oninput"
           class="@this.GetClasses()"
           disabled="@Disabled"
           id="@Id"
           name="@Name"
           placeholder="@Placeholder"
           required="@Required"
           type="@this.Type.ToString().FromPascalCaseToKebabCase()" />
</FormField>

@code {
    [Parameter]
    public bool Dense { get; set; } = false;

    [Parameter]
    public string Hint { get; set; }

    [Parameter]
    public IconNames IconEnd { get; set; }

    [Parameter]
    public IconNames IconStart { get; set; }

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Placeholder { get; set; }

    [Parameter]
    public InputTypes Type { get; set; } = InputTypes.Text;
}
