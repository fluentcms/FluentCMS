@inherits InputBaseComponent<string>

<FormField
    IconStart=@IconStart
    IconEnd=@IconEnd
    Dense=@Dense
    Id=@Id
    Hint=@Hint
    Label=@Label
    Required=@Required
    State=@State>
    <input
        type=@this.Type.ToString().FromPascalCaseToKebabCase()
        id="@Id"
        disabled=@Disabled
        name=@Name
        required=@Required
        class=@this.GetClasses()
        placeholder="@Placeholder"
        @bind=Value
        @bind:event="oninput"
        @attributes=AdditionalAttributes />
</FormField>

@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Hint { get; set; }

    [Parameter]
    public string Placeholder { get; set; }

    [Parameter]
    public IconNameEnum IconStart { get; set; }

    [Parameter]
    public IconNameEnum IconEnd { get; set; }

    [Parameter]
    public InputTypeEnum Type { get; set; } = InputTypeEnum.Text;

    [Parameter]
    public bool Dense { get; set; } = false;
}
