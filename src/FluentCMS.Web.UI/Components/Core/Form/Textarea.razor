@inherits InputBase<string?>
<textarea class="f-textarea" id="@Id" rows="@Rows" placeholder="@Placeholder" required=@Required @attributes="AdditionalAttributes" @bind="CurrentValue" />

@code {
    [Parameter]
    public string Rows { get; set; } = "5";

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Placeholder { get; set; }

    [Parameter]
    public bool Required { get; set; } = false;

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }

    // [Parameter(CaptureUnmatchedValues = true)]
    // public Dictionary<string, object> RestProps { get; set; }
}
