@inherits InputBaseComponent<string>

<FormField
    IconStart=@IconStart
    IconEnd=@IconEnd
	Id=@Id
    Hint=@Hint
    Label=@Label
    Required=@Required
    State=@State>
	<textarea
		rows=@Rows
		id="@Id"
		disabled=@Disabled
		name=@Name
		required=@Required
		class=@this.GetClasses()
		placeholder="@Placeholder"
		@bind=Value
		@bind:event="oninput"
		@attributes=AdditionalAttributes />
</FormField>

@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Hint { get; set; }

    [Parameter]
    public string Placeholder { get; set; }

    [Parameter]
    public IconNameEnum IconStart { get; set; }

    [Parameter]
    public IconNameEnum IconEnd { get; set; }

    [Parameter]
    public string Rows { get; set; } = "5";
}
