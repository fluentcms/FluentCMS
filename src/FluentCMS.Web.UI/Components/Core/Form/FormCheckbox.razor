@inherits Checkbox;

<FormField Class=@this.GetClasses() Id=@Id Label=@Label>
    <Checkbox Text=@Text Id=@Id Required=@Required Disabled=@Disabled @attributes=AdditionalAttributes @bind-Value=@Value @bind-Value:after="() => ValueChanged.InvokeAsync(Value)"/>
</FormField>

@code {
    [Parameter]
    public string Label { get; set; } = "";
}
