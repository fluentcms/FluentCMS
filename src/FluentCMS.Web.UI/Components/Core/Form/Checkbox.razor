@inherits InputBaseComponent<bool>

<FormField Id=@Id InlineLabel Label=@Label State=@State Hint=@Hint Required=@Required>
    <input
        id=@Id
        type="checkbox"
        class=@this.GetClasses()
        disabled=@Disabled
        required=@Required
        @bind=Value
        @attributes="@AdditionalAttributes" />
</FormField>

@code {
    [Parameter]
    public string Id {get; set;}

    [Parameter]
    public string Hint {get; set;}
}
