@inherits InputBaseComponent<bool>

<FormCheck>
    
    <input id="@Id" type="checkbox" class=@this.GetClasses() disabled=@(Disabled) @required="@Required" @bind=Value @bind:after="() => ValueChanged.InvokeAsync(Value)"
        @attributes="@AdditionalAttributes" />

    <FormCheckText For="@Id">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else if (Text != "")
        {
            @Text
        }
    </FormCheckText>
</FormCheck>

@code {
    [Parameter]
    public string Id { get; set; } = Guid.NewGuid().ToString();

    [Parameter]
    public bool Required { get; set; } = false;

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string Text { get; set; } = "";

}
