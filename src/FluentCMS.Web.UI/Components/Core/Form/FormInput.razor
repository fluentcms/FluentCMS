@inherits Input

<FormField Class=@this.GetClasses() Id=@Id Label=@Label>
    <Input Type=@Type Placeholder=@Placeholder Id=@Id Required=@Required @attributes="@AdditionalAttributes" @bind-Value=@Value/>
</FormField>

@code {
    [Parameter]
    public string Placeholder { get; set; } = "";

    [Parameter]
    public string Id { get; set; } = "f-" + Guid.NewGuid().ToString();

    [Parameter]
    public string Type { get; set; }

    [Parameter]
    public string Label { get; set; } = "";

    [Parameter]
    public bool Required { get; set; } = false;

    public string Name {get; set;} = "";

    [Parameter]
    public string Value {get; set;}
}
