@inherits Input

<FormField Id=@Id Required=@Required Hint=@Hint State=@State Label=@Label>
    <Input
		Disabled=@Disabled
		Id=@Id
		Name=@Name
		Placeholder=@Placeholder
		Required=@Required
		Type=@Type
		State=@State
		@attributes=@AdditionalAttributes
		@bind-Value=@Value
	/>
</FormField>

@code {
    [Parameter]
    public string Label {get; set;} = "";

	[Parameter]
	public string Hint {get;set;} = String.Empty;
}
