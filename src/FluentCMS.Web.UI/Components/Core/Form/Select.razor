@inherits InputBaseComponent<string>

	<FormField Required=@Required Label=@Label State=@State>
        <select class=@this.GetClasses()
                disabled=@Disabled
                id="@Id"
                name=@Name
                multiple=@Multiple
                required=@Required
                @bind=Value
                @attributes="@AdditionalAttributes">
            @if (this.Placeholder != string.Empty)
            {
                <Option Selected>@Placeholder</Option>
            }
            @ChildContent
        </select>

	</FormField>

@code {
    [Parameter]
    public IconNameEnum Icon { get; set; }

    [Parameter]
    public string? Id { get; set; }

    [Parameter]
    public bool Multiple { get; set; }

    [Parameter]
    public string? Placeholder { get; set; }
}
