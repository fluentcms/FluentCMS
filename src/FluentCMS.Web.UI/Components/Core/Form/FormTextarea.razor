@inherits InputBaseComponent<string>

<FormField Id=@Id
    Label=@Label
	Hint=@Hint
    Required=@Required
    State=@State
    IconStart=@IconStart
    IconEnd=@IconEnd>

    <Textarea
        Rows=@Rows
        Placeholder=@Placeholder
        Id=@Id
        Required=@Required
        @attributes=@AdditionalAttributes
    @bind-Value=@Value/>
</FormField>

@code {
    [Parameter]
    public string Placeholder {get; set;} = "";

    [Parameter]
    public string Id {get; set;} = "f-" + Guid.NewGuid().ToString();

    [Parameter]
    public string Rows {get; set;}

    [Parameter]
    public string Label {get; set;} = "";

    [Parameter]
    public string Hint {get; set;}


    [Parameter]
    public bool Required {get; set;} = false;

    [Parameter]
    public string Value {get; set;}

	[Parameter]
	public IconNameEnum IconStart {get; set;} = IconNameEnum.Default;

	[Parameter]
	public IconNameEnum IconEnd {get; set;} = IconNameEnum.Default;
}
