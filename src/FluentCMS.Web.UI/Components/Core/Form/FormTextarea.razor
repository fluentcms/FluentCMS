@inherits InputBaseComponent<string>

<FormField Hint="Hint"
           Id="Id"
           IconEnd="IconEnd"
           IconStart="IconStart"
           Label="Label"
           Required="Required"
           State="State">
    <Textarea @attributes="AdditionalAttributes"
              @bind-Value="Value"
              Id="Id"
              Placeholder="Placeholder"
              Required="Required"
              Rows="Rows" />
</FormField>

@code {
    [Parameter]
    public string Hint { get; set; }

    [Parameter]
    public IconNameEnum IconStart { get; set; } = IconNameEnum.Default;

    [Parameter]
    public IconNameEnum IconEnd { get; set; } = IconNameEnum.Default;

    [Parameter]
    public string Id { get; set; } = "f-" + Guid.NewGuid().ToString();

    [Parameter]
    public string Label { get; set; } = "";

    [Parameter]
    public string Placeholder { get; set; } = "";

    [Parameter]
    public bool Required { get; set; } = false;

    [Parameter]
    public string Rows { get; set; }

    [Parameter]
    public string Value { get; set; }
}
