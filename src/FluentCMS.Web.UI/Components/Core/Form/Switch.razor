@inherits InputBaseComponent<bool>

<FormField Dense="@Dense"
           Hint="@Hint"
           InlineLabel="true"
           Label="@Label"
           Required="@Required"
           State="@State">
    <input @attributes="AdditionalAttributes"
           @bind="@Value"
           class="@this.GetClasses()"
           disabled="@Disabled"
           name="@Name"
           required="@Required"
           type="checkbox" />
    <div class="@this.ClassName("SwitchInner")"></div>
</FormField>

@code {
    [Parameter]
    public bool Dense { get; set; }

    [Parameter]
    public string? Hint { get; set; }
}
