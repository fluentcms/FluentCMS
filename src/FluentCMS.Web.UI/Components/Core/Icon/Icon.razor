            break; 

    }
    @* <iconify-icon icon=@($"{Pack}:{Name}") width="100%" height="100%" /> *@
</span>

@code {
    [Parameter]
    public IconNameEnum Name { get; set; } = IconNameEnum.Default;

    [Parameter]
    [CssProperty]
    public ColorEnum Color { get; set; } = ColorEnum.Default;

    [Parameter]
    [CssProperty]
    public SizeEnum Size { get; set; } = SizeEnum.Default;
}
