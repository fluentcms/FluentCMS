{
  "name": "fluentcms.web.ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tailwind:watch": "tailwindcss -i wwwroot/css/app.css -o wwwroot/css/app.min.css --watch",
    "tailwind": "tailwindcss -i wwwroot/css/app.css -o wwwroot/css/app.min.css --minify",
    "sass:watch": "sass wwwroot/css/app.scss:wwwroot/css/app.css --watch",
    "sass": "sass wwwroot/css/app.scss:wwwroot/css/app.css",
    "watch": "conc \"npm run tailwind:watch\" \"npm run sass:watch\"",
    "build": "npm run sass && npm run tailwind",

    "dev": "conc \"npm run watch\" \"dotnet watch\""
  },
  "devDependencies": {
    "conc": "^0.0.3",
    "flowbite": "^2.1.1",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
