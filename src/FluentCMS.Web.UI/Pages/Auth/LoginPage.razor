@page "/login"
@using System.Text.Json
@layout CenterLayout

<a href="https://flowbite-admin-dashboard.vercel.app/" class="f-logo">
    <img src="https://flowbite-admin-dashboard.vercel.app/images/logo.svg" class="f-logo-image" alt="FluentCMSLogo">
    <span class="f-logo-text">Flowbite</span>
</a>

<Card Width="xl">
    <CardBody>
        <CardTitle>Login</CardTitle>
        <EditForm Model="UserAuthenticateRequest" class="f-login-form" OnValidSubmit="Submit">
            <FormField Label="Your Username">
                <InputText Type="text" class="f-input" @bind-Value="UserAuthenticateRequest.Username"></InputText>
            </FormField>
            <FormField Label="Your Password">
                <InputText class="f-input" @bind-Value="UserAuthenticateRequest.Password" type="password"></InputText>
            </FormField>
            <FormField>
                <InputCheckbox @bind-Value="Remember" Text="Remember me" />
            </FormField>
            

            <Button size="lg" color="primary" Type="submit">Login to your account</Button>
        </EditForm>
    </CardBody>
</Card>

