@page "/previews/form-components"
@layout PanelLayout;
@rendermode InteractiveServer

<Page>
	<PageHeader Title="Form Components">

	</PageHeader>

	<div class="m-4 bg-white border border-gray-200 dark:border-gray-700 p-4 shadow dark:bg-gray-800">
		<Input Label="Default Input"/>
		<Input Required Label="Required Input"/>
		<Input Disabled Label="Disabled Input"/>
		<Input Readonly Label="Readonly Input" Value="Value"/>
		<Input Placeholder="This is Placeholder" Label="Placeholder"/>
		<Input Label="Icon Start" IconStart="IconNameEnum.Search"/>
		<Input Label="Icon End" IconEnd="IconNameEnum.Delete"/>
		<Input Label="Hint" Hint="Some description comes here..."/>

		<Input Label="Invalid" State="FormFieldStateEnum.Invalid" IconEnd="IconNameEnum.Delete" Hint="This field has problem"/>
		<Input Label="Valid" State="FormFieldStateEnum.Valid" IconEnd="IconNameEnum.Search" Hint="Success"/>
	</div>

	<div class="m-4 bg-white border border-gray-200 dark:border-gray-700 p-4 shadow dark:bg-gray-800">
		<Textarea Label="Default Textarea"/>
		<Textarea Required Label="Required Textarea"/>
		<Textarea Disabled Label="Disabled Textarea"/>
		<Textarea Rows="20" Label="Textarea Rows (20 rows)"/>
		<Textarea Readonly Label="Readonly Textarea" Value="Value"/>
		<Textarea Placeholder="This is Placeholder" Label="Placeholder"/>
		<Textarea Label="Icon Start" IconStart="IconNameEnum.Search"/>
		<Textarea Label="Icon End" IconEnd="IconNameEnum.Delete"/>
		<Textarea Label="Hint" Hint="Some description comes here..."/>

		<Textarea Label="Invalid" State="FormFieldStateEnum.Invalid" IconEnd="IconNameEnum.Delete" Hint="This field has problem"/>
		<Textarea Label="Valid" State="FormFieldStateEnum.Valid" IconEnd="IconNameEnum.Search" Hint="Success"/>
	</div>


	<div class="m-4 bg-white border border-gray-200 dark:border-gray-700 p-4 shadow dark:bg-gray-800">
		<Select Label="Default Select">
			<Option>One</Option>
			<Option>Two</Option>
			<Option>Three</Option>
		</Select>

		<Select Required Label="Required Select">
			<Option>One</Option>
			<Option>Two</Option>
			<Option>Three</Option>
		</Select>

		<Select Disabled Label="Disabled Select" Value="2">
			<Option Value="1">One</Option>
			<Option Value="2">Two</Option>
			<Option Value="3">Three</Option>
		</Select>

		<Select Readonly Label="Readonly Select" Value="2">
			<Option Value="1">One</Option>
			<Option Value="2">Two</Option>
			<Option Value="3">Three</Option>
		</Select>
		<Select Label="Select with Placeholder" Placeholder="Choose an option" Value="2">
			<Option Value="1">One</Option>
			<Option Value="2">Two</Option>
			<Option Value="3">Three</Option>
		</Select>


		<Select IconStart="IconNameEnum.Search" Label="Select Icon Start">
			<Option>One</Option>
			<Option>Two</Option>
			<Option>Three</Option>
		</Select>

		<Select Label="Select With Hint" Hint="Some description here...">
			<Option>One</Option>
			<Option>Two</Option>
			<Option>Three</Option>
		</Select>

		<Select State="FormFieldStateEnum.Invalid" Label="Invalid Select" Hint="Something went wrong...">
			<Option>One</Option>
			<Option>Two</Option>
			<Option>Three</Option>
		</Select>

		<Select State="FormFieldStateEnum.Valid" Label="Valid Select" Hint="Something went wrong...">
			<Option>One</Option>
			<Option>Two</Option>
			<Option>Three</Option>
		</Select>

	</div>

</Page>
