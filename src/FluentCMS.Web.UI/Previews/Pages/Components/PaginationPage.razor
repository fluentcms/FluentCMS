@page "/previews/components/pagination"
@layout ComponentsLayout
@rendermode InteractiveServer

<Page>
    <PageHeader HasBack Title="Pagination"/>

    <PageBody>
        <Preview Title="Default">
            <Description></Description>
            <ChildContent>
                <Grid ItemsSmall=GridItemsEnum.Center JustifySmall=GridJustifyEnum.Center>
                    <GridItem>
                        <Pagination Total="10" Current="5" ShowIcons=false />
                    </GridItem>
                </Grid>
            </ChildContent>
        </Preview>

        <Preview Title="Icons">
            <Description></Description>
            <ChildContent>
                <Grid ItemsSmall=GridItemsEnum.Center JustifySmall=GridJustifyEnum.Center>
                    <GridItem>
                        <Pagination Total="10" Current="5" ShowIcons=true />
                    </GridItem>
                </Grid>
            </ChildContent>
        </Preview>

         <Preview Title="Info">
             <Description></Description>
             <ChildContent>
                 <Grid ItemsSmall=GridItemsEnum.Center JustifySmall=GridJustifyEnum.Center>
                     <GridItem>
                         <PaginationInfo Total="1000" Current="1" />
                     </GridItem>
                 </Grid>
             </ChildContent>
         </Preview>
     </PageBody>
 </Page>
