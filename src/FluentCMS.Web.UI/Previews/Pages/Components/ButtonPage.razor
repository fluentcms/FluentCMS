@page "/previews/components/button"
@rendermode InteractiveServer
@layout ComponentsLayout

<Page>
    <PageHeader HasBack Title="Buttons"/>

    <PageBody>
        <Preview Title="Default">
            <Description>
                Use these default button styles with multiple colors to indicate an action or link within your website.
            </Description>
            <ChildContent>
                 <div class="flex gap-4">
                    <Button>Default</Button>
                    <Button Color=@Colors.Primary>Primary</Button>
                    <Button Color=@Colors.Secondary>Secondary</Button>
                    <Button Color=@Colors.Success>Success</Button>
                    <Button Color=@Colors.Info>Info</Button>
                    <Button Color=@Colors.Warning>Warning</Button>
                    <Button Color=@Colors.Danger>Danger</Button>
                </div>
            </ChildContent>
        </Preview>

        <Preview Title="Outline">
            <Description>
                Use the following button styles to show the colors only for the border of the element.
            </Description>
            <ChildContent>
                <div class="flex gap-4">
                    <Button Outline>Default</Button>
                    <Button Outline Color=@Colors.Primary>Primary</Button>
                    <Button Outline Color=@Colors.Secondary>Secondary</Button>
                    <Button Outline Color=@Colors.Success>Success</Button>
                    <Button Outline Color=@Colors.Info>Info</Button>
                    <Button Outline Color=@Colors.Warning>Warning</Button>
                    <Button Outline Color=@Colors.Danger>Danger</Button>
                </div>
            </ChildContent>
        </Preview>

        <Preview Title="Disabled">
            <Description>
                Use the following styles to indicate a disabled button.
                This can be often used inside form elements to disable the submit button before all the form elements have been completed and validated.
            </Description>
            <ChildContent>
                <div class="flex gap-4">
                    <Button Disabled>Default</Button>
                    <Button Disabled Color=@Colors.Primary>Primary</Button>
                    <Button Disabled Color=@Colors.Secondary>Secondary</Button>
                    <Button Disabled Color=@Colors.Success>Success</Button>
                    <Button Disabled Color=@Colors.Info>Info</Button>
                    <Button Disabled Color=@Colors.Warning>Warning</Button>
                    <Button Disabled Color=@Colors.Danger>Danger</Button>
                </div>
            </ChildContent>
        </Preview>

        <Preview Title="With Icon">
            <Description>
                Use the following examples to add a icon inside the button either on the left or right side.
            </Description>
            <ChildContent>
                <div class="flex gap-4">
                    <Button>
                        <Icon Name=IconNames.InformationFilled />
                        Default
                    </Button>
                    <Button Color=@Colors.Primary>
                        <Icon Name=IconNames.InformationFilled />
                        Primary
                    </Button>
                    <Button Color=@Colors.Secondary>
                        <Icon Name=IconNames.InformationFilled />
                        Secondary
                    </Button>
                    <Button Color=@Colors.Success>
                        <Icon Name=IconNames.InformationFilled />
                        Success
                    </Button>
                    <Button Color=@Colors.Info>
                        <Icon Name=IconNames.InformationFilled />
                        Info
                    </Button>
                    <Button Color=@Colors.Warning>
                        <Icon Name=IconNames.InformationFilled />
                        Warning
                    </Button>
                    <Button Color=@Colors.Danger>
                        <Icon Name=IconNames.InformationFilled />
                        Danger
                    </Button>
                </div>
            </ChildContent>
        </Preview>

        <Preview Title="Ghost">
            <Description>
            </Description>
            <ChildContent>
                <div class="flex gap-4">
                    <Button Ghost>Default</Button>
                    <Button Ghost Color=Colors.Primary>Primary</Button>
                    <Button Ghost Color=Colors.Secondary>Secondary</Button>
                    <Button Ghost Color=Colors.Success>Success</Button>
                    <Button Ghost Color=Colors.Info>Info</Button>
                    <Button Ghost Color=Colors.Warning>Warning</Button>
                    <Button Ghost Color=Colors.Danger>Danger</Button>
                </div>
            </ChildContent>
        </Preview>

        <Preview Title="Sizes">
            <Description>
                Use these examples if you want to use smaller or larger buttons.
            </Description>
            <ChildContent>
                <div>
                    <Button Size=Sizes.Small>Small</Button>
                    <Button Size=Sizes.Medium>Medium (Default)</Button>
                    <Button Size=Sizes.Large>Large</Button>
                </div>
            </ChildContent>
        </Preview>

        <Preview Title="Group">
            <ChildContent>
                <div class="flex gap-4">
                    <ButtonGroup>
                        <Button>Cancel</Button>
                        <Button Color=@Colors.Primary>Confirm</Button>
                    </ButtonGroup>
                </div>
            </ChildContent>
        </Preview>
    </PageBody>
</Page>
