<Page>
    <PageHeader Title="Kitchen Sink">
        <PageActions>
            <NavigationButton To="/">Go Back</NavigationButton>
        </PageActions>
    </PageHeader>

    <div class="py-8">
        <h2 class="font-bold text-2xl">First Component</h2>
        <div class="py-4 flex gap-4">
            <Button>Hello</Button>
            <Button Color=@ColorEnum.Primary>Primary</Button>
            <Button Color=@ColorEnum.Secondary>Secondary</Button>
            <Button Color=@ColorEnum.Success>Success</Button>
            <Button Color=@ColorEnum.Info>Info</Button>
            <Button Color=@ColorEnum.Warning>Warning</Button>
            <Button Color=@ColorEnum.Danger>Danger</Button>

        </div>
    </div>

    <div class="py-8">
        <h2 class="font-bold text-2xl">Alerts</h2>
        <div class="py-4 flex flex-col gap-4">
            <Alert Type=@AlertTypeEnum.Success> Change a few things up and try submitting again.</Alert>
            <Alert Dismissible Type=@AlertTypeEnum.Warning> Change a few things up and try submitting again.</Alert>
            <Alert Type=@AlertTypeEnum.Danger> Change a few things up and try submitting again.</Alert>
            <Alert Type=@AlertTypeEnum.Warning> Change a few things up and try submitting again.</Alert>
        </div>
    </div>
    <div class="py-8">
        <h2 class="font-bold text-2xl">Checkbox</h2>
        <div class="py-4 flex flex-col gap-4">
            <Checkbox>First</Checkbox>
            <Checkbox Text="Second" />
            <Checkbox Value Text="Third"></Checkbox>
            <Checkbox Disabled Value Text="Fourth"></Checkbox>
        </div>
    </div>
    <div class="py-8">
        <h2 class="font-bold text-2xl">Radio</h2>
        <div class="py-4 flex flex-col gap-4">
            <Radio Name="group-1">Child Content</Radio>
            <Radio Name="group-1" Text="Text" />
            <Radio Name="group-1" Value Text="Value"></Radio>
            <Radio Name="group-1" Value Disabled Text="Value Disabled"></Radio>
            <Radio Name="group-1" Disabled Text="Disabled"></Radio>
        </div>
        <div class="py-4 flex flex-col gap-4">
            <Radio Name="group-2">Child Content</Radio>
            <Radio Name="group-2" Text="Text" />
            <Radio Name="group-2" Value Text="Value"></Radio>
            <Radio Name="group-2" Value Disabled Text="Value Disabled"></Radio>
            <Radio Name="group-2" Disabled Text="Disabled"></Radio>
        </div>
    </div>
    <div class="py-8">
        <h2 class="font-bold text-2xl">Checkbox binding</h2>
        <div class="py-4 flex flex-col gap-4">
            <Checkbox @bind-Value=Checkbox1Checked Text="First" />
            <Checkbox @bind-Value=Checkbox1Checked Text="Second" />
        </div>
        <Button OnClick="() => Checkbox1Checked = !Checkbox1Checked">Toggle</Button>
        <div>@Checkbox1Checked</div>
    </div>
    <div class="py-8">
        <h2 class="font-bold text-2xl">Checkbox 2 binding</h2>
        <div class="py-4 flex flex-col gap-4">
            <FormCheckbox @bind-Value=Checkbox2Checked Text="First" Label="Form Checkbox" />
            <FormCheckbox @bind-Value=Checkbox2Checked Text="Second" Label="Form Checkbox" />
        </div>
        <Button OnClick="() => Checkbox2Checked = !Checkbox2Checked">Toggle</Button>
        <div>@Checkbox2Checked</div>
    </div>
    <div class="py-8">
        <h2 class="font-bold text-2xl">Radio Group</h2>
        <div class="flex">
            <div class="w-1/2 pe-1">
                <FormRadioGroup Items="@(new List<FormListItemType>
                     {
                         new FormListItemType { Text = "HTML", Key = "html" },
                         new FormListItemType { Text = "JavaScript", Key = "js" }
                     })" @bind-Value="@RadioGroupValue">
                </FormRadioGroup>
            </div>
            <div class="w-1/2 ps-1">
                <FormRadioGroup Items="@(new List<FormListItemType>
                     {
                         new FormListItemType { Text = "HTML", Key = "html" },
                         new FormListItemType { Text = "JavaScript", Key = "js" }
                     })" @bind-Value="@RadioGroupValue">
                </FormRadioGroup>
            </div>
        </div>
        <div class="py-4 flex flex-col gap-4">

        </div>
        <Button OnClick="@(() => RadioGroupValue = "js")">Update</Button>
        <div>@RadioGroupValue</div>
    </div>

    <div class="py-8">
        <h2 class="font-bold text-2xl">Checkbox Group</h2>
        <div class="flex">
            <div class="w-1/2 pe-1">
                <FormCheckboxGroup Items="@(new List<FormListItemType>
                     {
                         new FormListItemType { Text = "HTML", Key = "html" },
                         new FormListItemType { Text = "JavaScript", Key = "js" }
                     })" @bind-Value="@CheckboxGroupValue">
                </FormCheckboxGroup>
            </div>
            <div class="w-1/2 ps-1">
                <FormCheckboxGroup Items="@(new List<FormListItemType>
                     {
                         new FormListItemType { Text = "HTML", Key = "html" },
                         new FormListItemType { Text = "JavaScript", Key = "js" }
                     })" @bind-Value="@CheckboxGroupValue">
                </FormCheckboxGroup>
            </div>
        </div>
        <div class="py-4 flex flex-col gap-4">

        </div>
        <Button OnClick="@(() => CheckboxGroupValue = new List<string> {"js"})">Update</Button>
        <div>@CheckboxGroupValue.Count</div>
    </div>

</Page>

@code {
    public bool Checkbox1Checked { set; get; } = true;
    public bool Checkbox2Checked { set; get; } = true;
    public string RadioGroupValue { set; get; } = null;
    public List<string> CheckboxGroupValue { set; get; } = new();

    public DummyModel Model { get; set; } = new() { Name = "Parsa" };
    public class DummyModel
    {
        public string Name { get; set; }
    }
    public void Submit()
    {
        Console.WriteLine(Model.Name);
    }
}
